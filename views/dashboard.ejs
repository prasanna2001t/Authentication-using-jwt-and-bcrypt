<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Stock Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap 4 CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

  <style>
    body {
      display: flex;
      min-height: 100vh;
      overflow: hidden;
    }
    .sidebar {
      width: 220px;
      background-color: #343a40;
      color: white;
      padding-top: 20px;
    }
    .sidebar a {
      color: white;
      display: block;
      padding: 12px 20px;
      text-decoration: none;
    }
    .sidebar a:hover {
      background-color: #495057;
    }
    .content {
      flex-grow: 1;
      padding: 20px;
      overflow-y: auto;
    }
    .card {
      margin-bottom: 20px;
    }
    .stock-table td, .stock-table th {
      vertical-align: middle;
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <h4 class="text-center">Welcome, <%= name %></h4>
    <a href="/dashboard">Dashboard</a>
    <a href="/profile">Profile</a>
    <a href="/settings">Settings</a>
    <a href="/logout">Logout</a>
  </div>

  <!-- Main Content -->
  <div class="content">
    <nav class="navbar navbar-light bg-light mb-4">
      <span class="navbar-brand mb-0 h1">Stock Portfolio Dashboard</span>
    </nav>

    <!-- Stock Summary Cards -->
    <div class="row">
      <div class="col-md-4">
        <div class="card text-white bg-success">
          <div class="card-body">
            <h5 class="card-title">Portfolio Value</h5>
            <p class="card-text">$120,450.25</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-white bg-info">
          <div class="card-body">
            <h5 class="card-title">Today's Gain</h5>
            <p class="card-text">+$1,320.75 (1.1%)</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-white bg-danger">
          <div class="card-body">
            <h5 class="card-title">Total Stocks</h5>
            <p class="card-text">8</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Stock Table -->
    <h4 class="mt-4">Your Holdings</h4>
    <div class="table-responsive">
      <table class="table table-bordered table-hover stock-table">
        <thead class="thead-dark">
          <tr>
            <th>Symbol</th>
            <th>Company</th>
            <th>Shares</th>
            <th>Buy Price</th>
            <th>Current Price</th>
            <th>Change</th>
            <th>Total Value</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>AAPL</td>
            <td>Apple Inc.</td>
            <td>50</td>
            <td>$150.00</td>
            <td>$180.25</td>
            <td class="text-success">+20.2%</td>
            <td>$9,012.50</td>
          </tr>
          <tr>
            <td>GOOGL</td>
            <td>Alphabet Inc.</td>
            <td>10</td>
            <td>$2,500.00</td>
            <td>$2,650.00</td>
            <td class="text-success">+6.0%</td>
            <td>$26,500.00</td>
          </tr>
          <tr>
            <td>TSLA</td>
            <td>Tesla Inc.</td>
            <td>15</td>
            <td>$700.00</td>
            <td>$650.00</td>
            <td class="text-danger">-7.1%</td>
            <td>$9,750.00</td>
          </tr>
          <tr>
            <td>INFY</td>
            <td>Infosys</td>
            <td>100</td>
            <td>₹1,400</td>
            <td>₹1,620</td>
            <td class="text-success">+15.7%</td>
            <td>₹162,000</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
